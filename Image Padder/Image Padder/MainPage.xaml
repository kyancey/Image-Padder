<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Image_Padder.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Image Padder" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <StackLayout>
                <Entry x:Name="widthEntry" Placeholder="Width"/>
                <Entry x:Name="heightEntry" Placeholder="Height"/>
                <Button x:Name="padButton" Text="Pad" Clicked="padButton_Clicked"/>
            </StackLayout>
            <Label x:Name="imageBuffer" Text="" Padding="30,10,30,10"/>
            <Image x:Name="sharedImage"  Source="@drawable/icon"/>
            <Button x:Name="shareButton" Text="Share" Clicked="shareButton_Clicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
